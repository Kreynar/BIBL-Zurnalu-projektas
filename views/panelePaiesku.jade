script.
  $(document).ready(function(){

    $('#aPaieskaPagalFraze').click(function (event) {
      event.preventDefault();
      var frazePaieskos = $('#textareaPaieskaPagalFraze').val();
      if (frazePaieskos) {
        frazePaieskos = $.trim(frazePaieskos);
        var queryRegexPaieskos = '/' + frazePaieskos + '/i';
        var pathIrQuery = $(this).attr('href') + queryRegexPaieskos
        window.location.href = pathIrQuery;
        //      $('#aPaieskaPagalFraze').attr('href', pathIrQuery);
      }
      else {
        $('#textareaPaieskaPagalFraze').focus();
      }
    });

  });





