table#lenteleIrasuSaraso.table-responsivetable.table.table-striped.table-bordered
  thead
    tr
      - for (var numerisStulpelioArbaFieldo = 0; numerisStulpelioArbaFieldo < kiekisStulpeliuArbaFieldu; numerisStulpelioArbaFieldo++) {
        - if (getArRodytiStulpeliLenteleje(numerisStulpelioArbaFieldo)) {
          - if (getAliasStulpelioArbaFieldo(numerisStulpelioArbaFieldo) == 'checkboxTrynimoIrKeitimo') {
            th: input.checkboxInThead(type='checkbox' id='visi')
          - }
          - else {
            th= getPavadinimaStulpelio(numerisStulpelioArbaFieldo)
          - }
        - }
      - }
  tbody
    - for (var numerisEilutesIrElemento = 0; numerisEilutesIrElemento < masyvasDocumentu.length; numerisEilutesIrElemento++) {
      tr
        - var objektasDocumento = masyvasDocumentu[numerisEilutesIrElemento];
        - var rasta = false;
        - for (var numerisStulpelioArbaFieldo = 0; numerisStulpelioArbaFieldo < kiekisStulpeliuArbaFieldu; numerisStulpelioArbaFieldo++) {
          - if (getArRodytiStulpeliLenteleje(numerisStulpelioArbaFieldo)) {
            - if (getAliasStulpelioArbaFieldo(numerisStulpelioArbaFieldo) == 'checkboxTrynimoIrKeitimo') {
              td: input.checkboxInTbody(type='checkbox' id=objektasDocumento['_id'].toHexString())
            - }
            - else if (getAliasStulpelioArbaFieldo(numerisStulpelioArbaFieldo) == 'nr') {
              td= numerisEilutesIrElemento
            - }
            - else if (objektasDocumento.hasOwnProperty(getPavadinimaFieldo(numerisStulpelioArbaFieldo))) {
              td!= Autolinker.link(objektasDocumento[getPavadinimaFieldo(numerisStulpelioArbaFieldo)])
            - }
            - else {
              td
            - }
          - }
        - }
    - }


script.

  $('.checkboxInThead').change(function(event) {
    if (this.checked) {
      $('.checkboxInTbody').prop('checked', true);
    }
    else {
      $('.checkboxInTbody').prop('checked', false);
    }
  });