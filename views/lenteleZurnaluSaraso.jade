              td!= Autolinker.link(objektasDocumentZurnalo[getPavadinimaFieldo(numerisStulpelioArbaFieldo)])
            - }
            - else {
              td
            - }
          - }
        - }
    - }


script.

  $('.checkboxInThead').change(function(event) {
    if (this.checked) {
      $('.checkboxInTbody').prop('checked', true);
    }
    else {
      $('.checkboxInTbody').prop('checked', false);
    }
  });