          //- if (numerisStulpelio == 0) {
          //  td= numerisEilutesIrElemento
          //- }
          - if (getArRodytiStulpeliLenteleje(numerisStulpelioArbaFieldo)) {
            - if (getAliasStulpelioArbaFieldo(numerisStulpelioArbaFieldo) == 'checkboxTrynimoIrKeitimo') {
              td: input.checkboxInTbody(type='checkbox' id=objektasDocumentZurnalo['_id'].toHexString())
            - }
            - else if (getAliasStulpelioArbaFieldo(numerisStulpelioArbaFieldo) == 'nr') {
              td= numerisEilutesIrElemento
            - }
